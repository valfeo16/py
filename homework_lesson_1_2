date = input("Введите дату : ")
task_content = input("Введите задачу : ")
print(date, " ", task_content)

date = []
task_content = []

for i in range(3):
  date.append(input("Введите дату : "))
  task_content.append(input("Введите задачу : "))

for i in range(3):
  print(date[i], " ", task_content[i])
